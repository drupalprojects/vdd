{
  "name": "vdd",
  "env_run_lists": {},
  "default_attributes": {
    "vm": {
      "ip": "192.168.44.44",
      "memory": "1024",
      "synced_folders": [
        {
          "host_path": "data/",
          "guest_path": "/var/www"
        },
        {
          "host_path": "../../Sites",
          "guest_path": "/var/www/vhosts"
        }

      ],
      "forwarded_ports": []
    },
    "mysql": {
      "server_root_password": "root",
      "server_repl_password": "root",
      "server_debian_password": "root"
    },
    "mariadb" : {
      "use_default_repository": true,
      "server_root_password": "root",
      "mysqld": {
        "connect_timeout": 600,
        "wait_timeout": 1800,
        "open_files_limit": "24000"
      }
    },
    "php": {
      "ext_conf_dir": "/etc/php5/mods-available"
    },
    "java": {
      "jdk_version": "7"
    },
    "drush": {
      "version" : "6.6.0",
      "version7": "7.0.0",
      "version8": "8.0.0-beta14"
    },
    "pimpmylogs": {
      "version" : "v1.7.9"
    },
    "solr" : {
      "version": "4.10.3"
    },
    "apache" : {
      "listen_ports": [ 8082 ]
    },
    "varnish": {
      "version": "4.0"
    },
    "nginx": {
      "client_max_body_size": "100m"
    },
    "mongodb": {
      "config": {
        "dbpath": "/mnt/persistant/mongodb"
      }
    },
    "ssl": {
      "certificate_path": "/etc/self-signed-certificates"
    },
    "phantomjs": {
      "version": "1.9.8",
      "base_url": "https://bitbucket.org/ariya/phantomjs/downloads"
    },
    "drupalextension": {
      "install_path": "/opt/drupalextension"
    }
  },
  "override_attributes": {},
  "json_class": "Chef::Role",
  "run_list": [
    "recipe[vdd::swap]",
    "recipe[apt]",
    "recipe[apache2]",
    "recipe[vdd::apache]",
    "recipe[vdd::graphviz]",
    "recipe[vdd::mysql]",
    "recipe[mariadb::default]",
    "recipe[vdd::sites]",
    "recipe[vdd::databases]",
    "recipe[vdd::php]",
    "recipe[php5-fpm::install]",
    "recipe[vdd::uploadprogress]",
    "recipe[vdd::mailcatcher]",
    "recipe[vdd::phpmyadmin]",
    "recipe[vdd::git]",
    "recipe[vdd::webgrind]",
    "recipe[vdd::mc]",
    "recipe[vdd::apc]",
    "recipe[vdd::rsync]",
    "recipe[vdd::curl]",
    "recipe[vdd::composer]",
    "recipe[vdd::drush]",
    "recipe[vdd::help]",
    "recipe[vim_config]",
    "recipe[vdd::vim]",
    "recipe[vdd::patchutils]",
    "recipe[vdd::siege]",
    "recipe[solr]",
    "recipe[vdd::solr]",
    "recipe[dnsmasq]",
    "recipe[vdd::dnsmasq]",
    "recipe[nodejs]",
    "recipe[nodejs::npm]",
    "recipe[vdd::grunt]",
    "recipe[mongodb]",
    "recipe[vdd::mongodb]",
    "recipe[varnish_ng]",
    "recipe[vdd::varnish]",
    "recipe[vdd::ssl]",
    "recipe[nginx]",
    "recipe[vdd::nginx]",
    "recipe[vdd::bash]",
    "recipe[memcached]",
    "recipe[vdd::pimpmylogs]",
    "recipe[imagemagick]",
    "recipe[phantomjs]",
    "recipe[vdd::phantomjs]",
    "recipe[vdd::drupalextension]",
    "recipe[vdd::rsyslog]",
    "recipe[vdd::tika]"
  ],
  "description": "Installs Drupal development environment.",
  "chef_type": "role"
}
