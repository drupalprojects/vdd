<VirtualHost *:8082>
  DocumentRoot /opt/xhprof/xhprof_html
  ServerName xhprof.dev
  RewriteEngine On
  ErrorLog /var/log/apache2/error.log
  LogLevel warn
  CustomLog /var/log/apache2/access.log combined
  ServerSignature On

  <Directory /opt/xhprof/xhprof_html>
      AllowOverride All
      Require all granted
  </Directory>
</VirtualHost>